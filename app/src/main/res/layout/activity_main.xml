<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4C5FD"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearmenu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/img__3_"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_all"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/all_themes"
            android:layout_marginTop="8dp"
            app:tint="@color/fundo4" />

        <ImageView
            android:id="@+id/btn_smile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:src="@drawable/smile_theme"
            app:tint="@color/fundo4" />

        <ImageView
            android:id="@+id/btn_sun"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:src="@drawable/sun_theme"
            app:tint="@color/fundo4" />


    </LinearLayout>

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/fundo4"
        android:text="OlÃ¡"
        android:textSize="25dp"
        android:textStyle="bold" />
    
    <View
        android:id="@+id/view_frase"
        android:layout_below="@+id/textFrases"
        android:layout_width="128dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:background="@color/fundo4"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/fundo4"
        />

    <TextView
        android:id="@+id/textFrases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="25dp"
        android:textColor="@color/fundo4"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:text="Motive-se!"
         />
    <Button
        android:id="@+id/btn_frase"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ripple_button"
        android:layout_marginBottom="110dp"
        android:text="Nova Frase"/>




</RelativeLayout>